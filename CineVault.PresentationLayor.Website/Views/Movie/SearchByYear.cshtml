@model IEnumerable<string>

@{
    ViewData["Title"] = "SearchByYear";
}

<h1 class="title-colored">Zoeken op jaartal</h1>

<partial name="/Views/Shared/SearchBox.cshtml"></partial>

<table class="table" id="resultTable" style="background-color: beige; color: black; border-radius: 10px; padding: 10px;">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                <td colspan="2">
                    <a asp-action="ShowMoviesFromYear" asp-route-year="@item" class="klick-link">
                        @Html.DisplayFor(modelItem => item)
                    </a>
                </td>

        </tr>
}
    </tbody>
</table>

<script src="~/js/SearchFilter.js" asp-append-version="true"></script>


